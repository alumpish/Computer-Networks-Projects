{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "make&debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/network.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Skip std namespace",
                    "text": "skip -rfunction ^std::"
                }
            ],
            "preLaunchTask": "make"
        }
    ]
}
